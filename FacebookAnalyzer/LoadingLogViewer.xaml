<UserControl x:Class="FacebookAnalyzer.LoadingLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FacebookAnalyzer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Loading Log" HorizontalAlignment="Center" FontSize="40" Margin="30"/>
            <ProgressBar x:Name="progress" Height="40" Margin="40" Foreground="CadetBlue" />
        </DockPanel>
    </Grid>
</UserControl>
