<Window x:Class="FacebookAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FacebookAnalyzer"
        mc:Ignorable="d"
        Title="Facebook Log Analyzer" Height="768" Width="1024">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Bottom" Background="LightBlue">
                <Button x:Name="backButton" Width="54" Height="26" DockPanel.Dock="Left" Click="backButton_Click" Content="Back" />
                <Button x:Name="homeButton" Width="54" Height="26" DockPanel.Dock="Left" Click="homeButton_Click" Content="Home"/>
                <Label x:Name="statusLabel" />
            </DockPanel>
            <UserControl x:Name="mainControl" />
        </DockPanel>
    </Grid>
</Window>
