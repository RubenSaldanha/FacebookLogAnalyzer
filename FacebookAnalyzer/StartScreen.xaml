<UserControl x:Class="FacebookAnalyzer.StartScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FacebookAnalyzer"
             mc:Ignorable="d" 
             d:DesignHeight="668" d:DesignWidth="1014">
    <Grid>
        <DockPanel>
            <Label Content="Facebook Log Analyzer" FontSize="40" HorizontalAlignment="Center" Margin="0,20,0,20" DockPanel.Dock="Top" />
            <Label Content="Version 0.0.1" HorizontalAlignment="Center" DockPanel.Dock="Bottom"/>

            <GroupBox Width="300" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center" Header="Recent Logs" >
                <DockPanel>
                    <Button x:Name="addLog" Content="ADD" DockPanel.Dock="Right" Height="40" Width="40" VerticalAlignment="Top" Click="addLog_Click"/>
                    <StackPanel x:Name="logsPanel" Orientation="Vertical" />
                </DockPanel>
            </GroupBox>
        </DockPanel>
    </Grid>
</UserControl>
